{
  "manifest_version": 3,
  "name": "Karakeep Dashboard Companion",
  "version": "1.0.0",
  "description": "Bridges Chrome tabs/windows APIs to the Karakeep Dashboard web app",
  "permissions": ["tabs"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Karakeep Dashboard Companion"
  },
  "background": {
    "service_worker": "background.js"
  },
  "externally_connectable": {
    "matches": [
      "http://localhost:5173/*",
      "http://localhost:4173/*",
      "http://127.0.0.1:5173/*",
      "http://127.0.0.1:4173/*"
    ]
  }
}
